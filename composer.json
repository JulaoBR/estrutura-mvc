{
    "name": "julio/estrutura-mvc",
    "type": "project",
    "require": {
        "twbs/bootstrap": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0.1"
    },
    "autoload": {
        "psr-4": {
            "core\\": "core/",
            "config\\": "config/",
            "src\\": "src/",
            "routes\\": "routes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Julio Cesar"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "bash ./scripts/copy_assets.sh"
        ],
        "post-update-cmd": [
            "bash ./scripts/copy_assets.sh"
        ],
        "copy-assets": "bash ./scripts/copy_assets.sh"
    }
}
